# API Keys
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key_here
VITE_SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# API URLs
# Note: arXiv API doesn't require an API key but has rate limits (see https://info.arxiv.org/help/api/basics.html#rate-limits)
VITE_ARXIV_API_URL=https://export.arxiv.org/api/query
VITE_SEMANTIC_SCHOLAR_API_URL=https://api.semanticscholar.org/graph/v1
VITE_ANTHROPIC_API_URL=https://api.anthropic.com

# App Configuration
VITE_API_CACHE_DURATION=3600 # Cache duration in seconds
VITE_MAX_PAPERS_PER_REQUEST=30 # Respect arXiv's max results per query
VITE_DEFAULT_PAPER_FETCH_LIMIT=10
VITE_ARXIV_REQUEST_INTERVAL=3000 # 3 seconds between requests per arXiv guidelines

# Note: Copy this file to .env and replace the placeholder values with your actual API keys
